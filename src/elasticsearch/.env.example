# Elasticsearch Configuration
ELASTICSEARCH_VERSION=9.0.2
ELASTIC_PASSWORD=elastic_passwd

# Production SSL (required for --production)
VIRTUAL_PORT=9200
VIRTUAL_HOST=elastic.example.com
LETSENCRYPT_HOST=elastic.example.com
LETSENCRYPT_EMAIL=jonh-smith@example.com

# Optional: Keycloak OIDC Integration (used only with COMPOSE_PROFILES=keycloak)
# Configure these variables based on your environment:
#
# Development example:
# KEYCLOAK_PROTOCOL=http
# KEYCLOAK_HOST=localhost
# KEYCLOAK_PORT=8080
#
# Production example:
# KEYCLOAK_PROTOCOL=https
# KEYCLOAK_HOST=sso.yourdomain.com
# KEYCLOAK_PORT=443

KEYCLOAK_PROTOCOL=http
KEYCLOAK_HOST=localhost
KEYCLOAK_PORT=8080
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=elasticsearch
KEYCLOAK_CLIENT_SECRET=your-client-secret-here